{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./client/src",                        // Base fix√©e sur client/src
    "paths": {
      "@/*": ["*"],                                   // Fonctionne avec baseUrl
      "@/components/*": ["components/*"],
      "@/utils/*": ["utils/*"],
      "@/hooks/*": ["hooks/*"]
    },
    "types": ["vite/client"],
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "exactOptionalPropertyTypes": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "incremental": true
  },
  "include": ["client/src"],
  "exclude": ["node_modules", "dist", "build", "**/*.test.ts", "**/*.test.tsx", "**/*.spec.ts"]
}
