{
  "name": "centre-imagerie",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -k -n SERVER,CLIENT -c blue,green \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx server/index.ts",
    "dev:client": "tsx client/scripts/dev-client.ts",
    "build": "NODE_ENV=production npm run build:client && npm run build:server",
    "build:client": "vite build --config client/vite.config.ts",
    "build:server": "esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outfile=dist/index.js",
    "start": "NODE_ENV=production node dist/index.js",
    "start:prod": "npm run build && npm start",
    "check": "tsc --noEmit",
    "preview": "vite preview --config client/vite.config.ts",
    "db:push": "drizzle-kit push",
    "deploy": "./deploy.sh"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.0.1",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-select": "^2.2.5",
    "axios": "^1.9.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "connect-pg-simple": "^10.0.0",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.43.1",
    "drizzle-zod": "^0.8.1",
    "express-session": "^1.18.1",
    "framer-motion": "^12.12.1",
    "helmet": "^8.1.0",
    "i18next": "^23.11.3",
    "i18next-browser-languagedetector": "^8.1.0",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.453.0",
    "next": "^15.3.2",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pg": "^8.16.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.55.0",
    "react-i18next": "^15.5.1",
    "react-leaflet": "^4.2.1",
    "recharts": "^2.15.2",
    "sonner": "^2.0.3",
    "tailwind-merge": "^2.6.0",
    "uuid": "^11.1.0",
    "wouter": "^3.3.5",
    "zod": "^3.25.20"
  },
  "devDependencies": {
    "@radix-ui/react-toast": "^1.2.14",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.7",
    "@tailwindcss/typography": "^0.5.16",
    "@tanstack/react-query": "^5.76.1",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.22",
    "@types/express-session": "^1.18.1",
    "@types/helmet": "^0.0.48",
    "@types/leaflet": "^1.9.18",
    "@types/node": "^20.17.50",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/pg": "^8.15.2",
